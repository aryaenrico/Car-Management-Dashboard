<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Car Management Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
     <link rel="stylesheet" href="style.css"> 
</head>
  <body>
    <header>
      <div class="container-fluid d-flex flex-row justify-content-between">
            <h1 class="title">List Car</h1>
            <button class="btn btn-primary add-new-car" type="button" id="add-car"><a href="/car">+ Add New Car</a></button >
      </div>
    </header>
      <section class="category">
            <div class="container-fluid ">
                  <button class="btn btn-category button-category" type="button"><a href="/">All</a></button>
                  <button class="btn btn-category btn-margin" type="button"> <a href="/?size=small">Small</a> </button>
                  <button class="btn btn-category btn-margin" type="button"><a href="/?size=medium">Medium</a></button>
                  <button class="btn btn-category btn-margin" type="button"><a href="/?size=large">Large</a></button>
            </div>

      </section>

      <section class="data-car">
            <div class="container-fluid car-list">
                  <div class="row">
                       <% if (data.length >0){ %>
                        <% data.forEach ((e,i) => {%>
                        
                              <div class="col-4">
                                    <div class="card card-container" style="width: 22rem;">
                                          <div class="container-img d-flex justify-content-center">
                                                <img class="card-img-top img-status" src="<%=e.foto%>" alt="Logo Mobil">
                                          </div>
                                          
                                          <div class="card-body container-text-body">
                                            <h5 class="card-title"><%=e.nama_mobil%></h5>
                                            <p class="card-text harga"><%=e.harga_sewa%> /  Hari</p>
                                            <img src="fi_clock.png" alt="logo-waktu">
                                            <p class="card-text updated-text"><%=e.updatedAt%></p>
                                          </div>
      
                                          <div class="container-fluid button-area ">
                                                <div class="row justify-content-around">
                                                      <div class="col-5">
                                                            <button type="button" class="btn btn-outline-danger btn-delete-car"><img src="Vector_1.png" alt="hapus-logo"><a href="car/<%=e.id%>" class="delete-color">DELETE</a></button>
                                                      </div>
      
      
                                                      <div class="col-5">
                                                            <button type="button" class="btn btn-success btn-delete-car"><img src="fi_edit.png" alt="edit-logo"><a href="car/<%=e.id%>" class="edit-color">EDIT</a></button>
                                                      </div>
                                                           
                                                </div>
                                              
      
                                          </div>
                                    </div>
                              </div>
                              <%})%>
                        <% }else {%>
                          <p>DATA KOSONG</p>    
                        <%}%>           
                  </div>
            </div>
      </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
      <script type="module">
            import {add_car} from "./main.js";
           

      </script>
</body>
</html>